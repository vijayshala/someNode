div.row
  div.col-md-12
    form.zs-admin-search-form(method='GET', action=formAction)
      div.input-group
        input.form-control.input-lg(type='text' name='search' placeholder=formPlaceHolder value=search onfocus=formOnFocus onkeyup=formKeyup)
        span.input-group-btn
          button.btn.btn-primary.btn-lg(type='submit')
            i.fa.fa-search
