extends ../index

block styles
  link(href='/public_nocache/stylesheets/partner/partner.css', rel='stylesheet')
  link(href='/public_nocache/stylesheets/partner/partner-portal.css', rel='stylesheet')
  link(href='/public_nocache/stylesheets/partner/partner-application.css', rel='stylesheet')
  
block mainbody
  .top-container.agent(style="background-image:url('" + page.metadata.partners[partner.type].backgroundImage + "')")
    .container
      .row
        .col-md-12.col-lg-12
          h1.text-danger.text-300.zs-main-title #{localizer.get('JOIN_A_PARTNER')}
      .row
        .col-md-12.col-lg-12
          br
          h3.text-center.text-300 !{localizer.get('YOU_ARE_A_STEP_AWAY_FROM_JOINING_PLACEHOLDER').replace('{COMPANY_NAME}', partner.fields.companyName)}
      .row
        .col-md-12.col-lg-12
          .text-center
            br
            a.btn.btn-danger.btn-lg(href='/partners/' + partner._id + '/join') #{localizer.get('JOIN_PLACEHOLDER_NOW').replace('{COMPANY_NAME}', partner.fields.companyName)}
