.modal.fade(tabindex='-1', role='dialog' id='newPartnerModal')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4.modal-title.text-400.text-danger #{localizer.get('ADD_A_PARTNER')}
      .modal-body
        form.agent-invitation-form(method='post' action='/partners/administration')
          input(type='hidden' name='_csrf' value=_csrf)
          .form-group
            label *#{localizer.get('PARTNER_TYPE')}
            select.form-control(name='type' required)
              option(value='') #{localizer.get('SELECT_ONE')}
              each partnerType in CONSTANTS.PARTNER_TYPES
                option(value=partnerType) #{localizer.get(partnerType)}
          .form-group
            label *#{localizer.get('USER_ID')}
            input.form-control.input-lg(type='text' name='userId' required)
          each field, f in newPartnerFields
            .form-group
              label *#{field}
              input.form-control.input-lg(type='text' name=field required)
          .text-right.buttons
            button.btn.btn-default#inviteBtn(type='button', data-dismiss='modal') #{localizer.get('CANCEL')}
            &nbsp;&nbsp;
            button.btn.btn-danger.text-400(type='submit') #{localizer.get('ADD_PARTNER')}
          p * #{localizer.get('THIS_FIELD_IS_REQUIRED')}
        
