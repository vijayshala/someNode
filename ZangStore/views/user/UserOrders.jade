        //-     a(href=formAction+'/uc-offers') #{localizer.get('UC_OFFERS')}
        //-     a#offers(href=formAction) #{localizer.get('IP_OFFICE')}
        include ../components/ListSearchForm
        div.row
          div.col-md-12.order-summary #{localizer.get('ORDER_SUMMARY')}
        div.row
          div.col-md-12
            include ../order/OrdersTable

