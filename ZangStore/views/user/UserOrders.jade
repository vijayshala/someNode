extends ../index

block styles
  link(href='/public_nocache/stylesheets/user/select-tab.css', rel='stylesheet')

block mainbody
  .container.bg-white
    div.row
      div.col-md-12
        include ./UserTitle
        include ./UserTabs
        - var formAction = '/user/' + userId + '/orders'
        - var formOnFocus = 'this.value = this.value;'
        - var formPlaceHolder = localizer.get('SEARCH_BY_CONFIRMATION') + ' #...'
        - var formKeyup = 'this.value = this.value.toUpperCase();'
        //- .row.filter-by
        //-   .col-lg-12
